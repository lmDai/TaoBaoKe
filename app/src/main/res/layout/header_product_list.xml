<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:minHeight="@dimen/dp_44">

    <TextView
        android:id="@+id/choose_comprehensive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#222222" />


    <com.bestsoft.ui.widget.DropdownButton
        android:id="@+id/choose_post_coupon"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <com.bestsoft.ui.widget.DropdownButton
        android:id="@+id/choose_sales_volume"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.bestsoft.ui.widget.DropdownButton
        android:id="@+id/choose_voucher_denomination"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>